{
    "name": "atari-dev-studio",
    "displayName": "Atari Dev Studio",
    "description": "Game creation for the Atari 8-bit consoles",
    "version": "0.0.1",
    "preview": true,
    "publisher": "chunkypixel",
    "homepage": "https://github.com/chunkypixel/atari-dev-studio",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/chunkypixel/atari-dev-studio.git"
    },
    "engines": {
        "vscode": "^1.33.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Other"
    ],
    "keywords": [
        "AtariAge",
        "batari Basic",
        "7800basic",
        "assembly",
        "dasm",
        "atari",
        "vcs",
        "2600",
        "7800",
        "6507"
    ],
    "contributes": {
        "languages": [
            {
                "id": "bb",
                "aliases": [
                    "batari Basic",
                    "bb"
                ],
                "extensions": [
                    ".bas",
                    ".bb"
                ],
                "configuration": "./languages/bb.language-configuration.json"
            },
            {
                "id": "78b",
                "aliases": [
                    "7800basic",
                    "78b"
                ],
                "extensions": [
                    ".bas",
                    ".78b"
                ],
                "configuration": "./languages/78b.language-configuration.json"
            },
            {
                "id": "dasm",
                "aliases": [
                    "dasm",
                    "Assembly",
                    "6502"
                ],
                "extensions": [
                    ".dasm",
                    ".asm",
                    ".a",
                    ".h"
                ],
                "configuration": "./languages/dasm.language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "bb",
                "scopeName": "source.bb",
                "path": "./syntaxes/bb.tmLanguage.json"
            },
            {
                "language": "78b",
                "scopeName": "source.78b",
                "path": "./syntaxes/78b.tmLanguage.json"
            },
            {
                "language": "dasm",
                "scopeName": "source.dasm",
                "path": "./syntaxes/dasm.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "extension.openWelcomePage",
                "title": "Open the Welcome page",
                "category": "ads"
            },
            {
                "command": "extension.buildGame",
                "title": "Compile source code",
                "category": "ads"
            },
            {
                "command": "extension.BuildGameAndRun",
                "title": "Compile source code and run in emulator",
                "category": "ads"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Atari Dev Studio",
            "properties": {
                "atari-dev-studio.editor.saveFileBeforeRun": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to save the active file before build is triggered.",
                    "scope": "resource"
                },
                "atari-dev-studio.editor.saveAllFilesBeforeRun": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to save all files before build is triggered.",
                    "scope": "resource"
                },
                "atari-dev-studio.editor.preserveCodeEditorFocus": {
                    "type": "boolean",
                    "default": false,
                    "description": "Whether to preserve focus on the code editor after build is triggered.",
                    "scope": "resource"
                },
                "atari-dev-studio.editor.clearPreviousOutput": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to clear the previous output window before build is triggered.",
                    "scope": "resource"
                },

                "atari-dev-studio.compilation.cleanupCompilationFiles": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to clean up compilation files after build is complete.",
                    "scope": "resource"
                },
                "atari-dev-studio.compilation.generateDebuggerFiles": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to generate debugger files on compilation.",
                    "scope": "resource"
                },

                "atari-dev-studio.batariBasic.compilerArgs": {
                    "type": "string",
                    "default": "",
                    "description": "Specify (optional) command line arguments, ie. -O (Optimizer).",
                    "scope": "resource"
                },
                "atari-dev-studio.batariBasic.compilerFolder": {
                  "type": "string",
                  "default": "",
                  "description": "Don't wish to use the included version of the batari Basic compiler? Specify the folder location of your compiler:",
                  "scope": "resource"
                },

                "atari-dev-studio.7800basic.compilerArgs": {
                    "type": "string",
                    "default": "",
                    "description": "Specify (optional) command line arguments.",
                    "scope": "resource"
                },
                "atari-dev-studio.7800basic.compilerFolder": {
                  "type": "string",
                  "default": "",
                  "description": "Don't wish to use the included version of the 7800basic compiler? Specify the folder location of your compiler:",
                  "scope": "resource"
                },

                "atari-dev-studio.dasm.compilerArgs": {
                    "type": "string",
                    "default": "",
                    "description": "Specify (optional) command line arguments:",
                    "scope": "resource"
                },
                "atari-dev-studio.dasm.compilerPath": {
                    "type": "string",
                    "default": "",
                    "description": "Don't wish to use the included version of the dasm compiler? Specify the full path (including filename) of your dasm compiler:",
                    "scope": "resource"
                },
                "atari-dev-studio.dasm.compilerFormat": {
                    "type": "string",
                    "enum": [
                      "1",
                      "2",
                      "3"
                    ],
                    "default": "3",
                    "description": "Specify the output format of the dasm compiler (1-3):",
                    "scope": "resource"
                },
                "atari-dev-studio.dasm.compilerVerboseness": {
                    "type": "string",
                    "enum": [
                      "0",
                      "1",
                      "2",
                      "3",
                      "4"
                    ],
                    "default": "0",
                    "description": "Specify the verboseness of the dasm compiler (0-4):",
                    "scope": "resource"
                }
            }
        }
    },
    "activationEvents": [
        "onCommand:extension.openWelcomePage",
        "onCommand:extension.buildGame",
        "onCommand:extension.BuildGameAndRun"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "open": "^6.1.0",
        "tree-kill": "^1.2.1"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.6",
        "@types/node": "^11.13.4",
        "@types/open": "^6.1.0",
        "typescript": "^3.4.3",
        "vscode": "^1.1.33"
    }
}
